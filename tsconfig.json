{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"allowImportingTsExtensions": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"incremental": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@services/*": [
				"src/service/*",
			],
			"@interfaces/*": [
				"src/interfaces/*",
			],
			"@lib/*": [
				"src/lib/*",
			]
		},
		"noEmit": true
	},
	"include": [
		"src",
		".next/types/**/*.ts"
, "src/pages/api"	],
	"exclude": [
		"node_modules",
		"dist"
	]
}